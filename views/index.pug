extends layout

block content
  h1= title
  p This is new text!
  button(type="button", class="btn btn-secondary", onclick="double()") Left

  div(id="double") Up the amount

  script.
    var value = 0;
    var power = 1;

    function double() {
      value += 1;
      power *= 2;
      document.getElementById("double").innerHTML = "Two to the power of " + value + " is " + power;
    }


  a(href="/games") link to games
